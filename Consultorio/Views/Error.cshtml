@model Consultorio.Models.ErrorViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Error</title>

    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon.png">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/colors/default-dark.css" id="theme" rel="stylesheet">
</head>

<body class="fix-header fix-sidebar card-no-border">

    <section id="wrapper" class="error-page">
        <div class="error-box">
            <div class="error-body text-center">
                <h1 class="text-info">@(Model.ErrorCode != null ? Model.ErrorCode.Value : "")</h1>
                <h3 class="text-uppercase">ERROR</h3>
                <p class="text-muted m-t-30 m-b-30">@Html.Raw(Model.Message.Replace("\n", "<br>"))</p>
                @if (Model.ErrorCode < 500)
                {
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-info btn-rounded waves-effect waves-light m-b-40">Volver al inicio</a>
                }
            </div>
            <footer class="footer text-center">© @DateTime.UtcNow.AddHours(-3).ToString("yyyy") - Consultorio Sola</footer>
        </div>
    </section>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/waves.js"></script>
</body>
</html>
