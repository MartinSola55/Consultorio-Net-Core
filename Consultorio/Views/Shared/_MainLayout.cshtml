@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Consultorio Sola - @ViewData["Title"]</title>

    <!-- Styles -->
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    <link href="https://fonts.bunny.net/css?family=Nunito" rel="stylesheet" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png" />
    <link rel="stylesheet" href="~/css/app.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/default-dark.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!-- Scripts -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.slimscroll.js"></script>
    <script src="https://kit.fontawesome.com/daef8fc514.js" crossorigin="anonymous"></script>
    <script src="~/js/waves.js"></script>
    <script src="~/js/sidebarmenu.js"></script>
    <script src="~/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <script src="~/lib/sparkline/jquery.sparkline.min.js"></script>
    <script src="~/js/custom.min.js"></script>
    <script src="~/lib/styleswitcher/jQuery.style.switcher.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/Magnific-Popup-master/dist/jquery.magnific-popup.min.js"></script>
    <script src="~/lib/Magnific-Popup-master/dist/jquery.magnific-popup-init.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.es.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/moment/moment-with-locales.js"></script>
</head>

<body class="fix-header fix-sidebar card-no-border mini-sidebar">
    
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>

    <div id="main-wrapper">
        <nav class="navbar navbar-expand navbar-dark bg-dark">
            <a class="navbar-brand mr-0" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="Logo" class="p-2" style="width: 280px; height: 60px;">
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li id="navHome" class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li id="navContacto" class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacto">Contacto</a>
                    </li>
                    <li id="navTurno" class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ModificarTurno">Modificar turno</a>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Turnos" asp-action="Index">Turnos</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <main role="main" class="page-wrapper ml-0 pt-5">
            @RenderBody()
        </main>

        <footer class="footer" style="left: 0 !important">
            &copy; @DateTime.UtcNow.AddHours(-3).Year - Consultorio Sola
        </footer>
    </div>

    <style>
        .navbar {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
    </style>

    <script>
        toastr.options = {
            positionClass: "toast-bottom-full-width",
            preventDuplicates: true,
            progressBar: true,
            onclick: null,
            showDuration: 300,
            hideDuration: 1000,
        };

        moment.locale('es');
        function toastrSuccess(message, title = "") {
            return toastr.success(
                message,
                title,
                {
                    showDuration: 700,
                }
            );
        };

        function toastrWarning(message, title = "") {
            return toastr.warning(
                message,
                title,
            );
        };
    </script>
</body>
</html>
